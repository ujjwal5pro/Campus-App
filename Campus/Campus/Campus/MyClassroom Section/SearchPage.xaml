<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Campus.MyClassroom_Section.SearchPage" Title="Myclassroom Content">
  <StackLayout Spacing="0">
    <StackLayout BackgroundColor="Teal">
      <BoxView HeightRequest="10"></BoxView>
      <SearchBar Placeholder="Search" PlaceholderColor="White" SearchButtonPressed="SearchBar1_OnSearchButtonPressed" 
                 TextChanged="SearchBar1_OnTextChanged" x:Name="SearchBar1" CancelButtonColor="White" TextColor="White"/>
    </StackLayout>
    <Frame Padding="10">
        <ListView x:Name="ListView1" ItemSelected="ListView1_OnItemSelected"/>
    </Frame>
  </StackLayout>
</ContentPage>